<script>
    require([
            'jquery',
            'prototype'
        ],
        function(jQuery)
        {
            var progressSpan = jQuery('#progress');

            jQuery('#adyen_configure_merchants').click(function ()
            {
                jQuery('#adyen_configure_errors').hide();
                var params = {};
                new Ajax.Request('<?php echo $block->getAjaxUrl() ?>', {
                    parameters:     params,
                    loaderArea:     false,
                    asynchronous:   true,
                    onCreate: function() {
                        progressSpan.find('.configured').hide();
                        progressSpan.find('.processing').show();
                        jQuery('#adyen_configure_errors_message').text('');
                        document.getElementById("adyen_configure_merchants").disabled = true;
                    },
                    onSuccess: function(response)
                    {
                        progressSpan.find('.processing').hide();

                        var resultText = '';
                        if (response.status > 200) {
                            resultText = response.statusText;
                        } else {
                            resultText = 'Completed';
                            progressSpan.find('.configured').show();
                        }
                        jQuery('#stripe_payments_configured_message').text(resultText);

                        try
                        {
                            if (typeof response.responseJSON.errors == "number" && response.responseJSON.errors > 0)
                            {
                                jQuery('#adyen_configure_errors').show();
                                if (response.responseJSON.errors == 1)
                                    jQuery('#adyen_configure_errors .message').text(response.responseJSON.errors + " error was logged under var/log/stripe_payments_webhooks.log");
                                else if (response.responseJSON.errors > 1)
                                    jQuery('#adyen_configure_errors .message').text(response.responseJSON.errors + " errors were logged under var/log/stripe_payments_webhooks.log");
                            }
                        }
                        catch (e)
                        {
                            console.warn(e);
                        }
                    },
                    onFailure: function(response)
                    {
                        progressSpan.find('.processing').hide();
                        jQuery('#adyen_configure_errors').text("Failed");
                    },
                    onComplete: function()
                    {
                        document.getElementById("adyen_configure_merchants").disabled = false;
                    }
                });
            });

        });
</script>

