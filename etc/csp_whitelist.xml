<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp/etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="adyen" type="host">*.adyen.com</value>
                <value id="googlepay" type="host">pay.google.com</value>
                <value id="amazonpay" type="host">*.payments-amazon.com</value>
                <value id="paypal" type="host">*.paypal.com</value>
                <value id="ratepay" type="host">*.ratepay.com</value>
                <value id="cashapp" type="host">*.cash.app</value>
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <value id="cashapp" type="host">cash-f.squarecdn.com</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="cashapp" type="host">*.cash.app</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="allow-all" type="host">*</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="allow-all" type="host">*</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="allow-all" type="host">*</value>
            </values>
        </policy>
        <policy id="form-action">
            <values>
                <value id="allow-all" type="host">*</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
